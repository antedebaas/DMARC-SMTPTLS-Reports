APP_ENV=prod
APP_SECRET={{ f.randomstring }}

DATABASE_TYPE={{f.database_type}}
{% if f.database_type == 'sqlite' %}
DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"
{% else %}
DATABASE_URL="{{f.database_type}}://{{f.database_user}}:{{f.database_password}}@{{f.database_host}}:{{f.database_port}}/{{f.database_db}}"
{% endif %}
MAILER_DSN=smtp://{{f.email_user}}:{{f.email_password}}@{{f.email_host}}:{{f.email_smtp_port}}

MAILBOX_CONNECTION="{{f.email_host}}:{{f.email_imap_ssl_port}}/imap/ssl"
MAILBOX_USERNAME="{{f.email_user}}"
MAILBOX_PASSWORD="{{f.email_password}}"
DELETE_PROCESSED_MAILS={{f.delete_processed_mails}}